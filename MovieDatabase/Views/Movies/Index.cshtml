@model IEnumerable<MovieDatabase.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

@if (ViewBag.isAdminVB)
{
    <p>
        <a asp-action="Create" style="text-decoration: none">
            <button class="btn btn-secondary btn-sm">Create New</button>
        </a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Raw("Title")
            </th>
            <th>
                @Html.Raw("Year")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.id" style="text-decoration: none">
                        <button class="btn btn-secondary btn-sm">Details</button>
                    </a>
                    @if (ViewBag.isAdminVB)
                    {
                        <a asp-action="Edit" asp-route-id="@item.id" style="text-decoration: none">
                            <button class="btn btn-secondary btn-sm">Edit</button>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.id" style="text-decoration: none">
                            <button class="btn btn-secondary btn-sm">Delete</button>
                        </a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
