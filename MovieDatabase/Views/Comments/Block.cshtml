@model MovieDatabase.Models.Comment

@{
    ViewData["Title"] = "Block";
}

@{
    var movie = ViewBag.movieVB;
    var content = Model.content;
    var user = ViewBag.userVB;
}

<h3>Block the following comment?</h3>

<hr />
<p>@user.UserName<br>"@content"</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Block">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
                <input type="hidden" asp-for="content" />
                <span asp-validation-for="content" class="text-danger"></span>
            <br>
            <div>
                <input type="submit" value="Block" class="btn btn-danger" />
           </div>
           <br>
        </form>

        <div>
            <a href="@Url.Action("Index", "MovieScene", new { id = movie.id })">
                <button class="btn btn-secondary">Cancel</button>
            </a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
