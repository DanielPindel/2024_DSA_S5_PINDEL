@model MovieDatabase.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

@{
    var movie = ViewBag.movieVB;
}

<h3>Are you sure you want to delete this comment for movie @movie.title?</h3>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.content)
        </dd>
        <dt class = "col-sm-2">
            @Html.Raw("Written on")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.time)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@Url.Action("Index", "MovieScene", new { id = movie.id })">Back to Movie</a>
    </form>
</div>
