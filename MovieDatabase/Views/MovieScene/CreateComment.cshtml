@model MovieDatabase.Models.Comment

@{
    ViewData["Title"] = "Create comment";
}

@{
    var movie = ViewBag.movieVB;
}

<h3>Write a comment for @movie.title</h3>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Comment:</p>
                <input asp-for="content" class="form-control" />
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "MovieScene", new { id = movie.id })">Back to Movie</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
