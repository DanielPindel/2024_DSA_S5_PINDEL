@{
    ViewData["Title"] = "RatingsAndReviews";
}

<head>
    <link rel="stylesheet" href="~/css/RatingsAndReviewsStyleSheet.css" />
</head>

<body>
    <div class="ratings-title">My ratings and reviews</div>
    <div class="rating-container">
        @for (int i = 0; i < 10; i++)
        {
            <div class="rating-item">
                <div class="rating-date">Reviewed on: 2024-05-29</div>
                <div class="stars">
                    @for (int j = 1; j <= 10; j++)
                    {
                        <span class="star" data-value="@j">&#9733;</span>
                    }
                </div>
                <div class="rating-poster">
                    <img src="~/images/2bf4c253-4d55-42dc-97c5-235b52d92f3a_bladerunner.jpg" alt="Placeholder Poster" />
                </div>
                <div class="rating-title">Movie Title Placeholder</div>
                <div class="rating-year">2024</div>
                <div class="rating-review">This is a placeholder review text.</div>
            </div>
        }
    </div>
</body>